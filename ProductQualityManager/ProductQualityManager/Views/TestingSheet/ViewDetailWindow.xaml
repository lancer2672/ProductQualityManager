<Window x:Class="ProductQualityManager.Views.TestingSheet.ViewDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductQualityManager.Views.TestingSheet"
        mc:Ignorable="d"
        
        Title="ViewDetailWindow" Height="450" Width="800">
    <StackPanel Margin="20">
        <Label HorizontalAlignment="Center" Content="THÔNG TIN CHI TIẾT PHIẾU ĐĂNG KÝ"></Label>
        <StackPanel>
            <Label Content="{Binding  IdTestingSheet }" ContentStringFormat="Mã phiếu đăng ký: {0}"></Label>
            <Label Content="{Binding  RegistrationDate}" ContentStringFormat="dd MMM yyyy"></Label>
            <Label Content="{Binding  }" ContentStringFormat="Mã phiếu đăng ký: {0}"></Label>
        </StackPanel>
    </StackPanel>
</Window>
